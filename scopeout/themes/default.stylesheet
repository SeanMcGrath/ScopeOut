QMainWindow,
SelectPropertiesPopup {
	background-color: #424242;
}

QWidget:disabled {
    color: gray;
    opacity: 30%;
}

QPushButton {
  padding: 6px;
  height: 24px;
  font-weight: bold;
  border-radius: 2px;
  background-color: #673AB7;
  color: white;
  margin-bottom: 5px;
}

QPushButton::disabled {
  background-color: gray;
  color: black;
}

QPushButton:hover {
  background-color: #5E35B1;
}

QPushButton:pressed {
  background-color: #512DA8;
}

QPushButton[type='stop'] {
  background-color: #F44336;
}

QPushButton[type='stop']::disabled {
  background-color: gray;
  color: black;
}

QPushButton[type='stop']::hover {
  background-color: #E53935
}

QPushButton[type='stop']::pressed {
  background-color: #D32F2F
}

QTabWidget::pane {
  border: 1px solid black;
}

AcquisitionControlWidget {
  max-width: 200px;
  background-color: #212121;
}

QTabBar::tab {
  border-top-left-radius: 2px;
  border-top-right-radius: 2px;
  background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #E1E1E1, stop: 0.4 #DDDDDD, stop: 0.5 #D8D8D8, stop: 1.0 #D3D3D3);
  padding: 4px;
  margin-right: 4px;
}

QTabBar::tab:hover,
QTabBar::tab:selected {
  background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #fafafa, stop: 0.4 #f4f4f4, stop: 0.5 #e7e7e7, stop: 1.0 #fafafa);
}

QTabBar::tab:!selected {
  margin-top: 2px;
}

QLabel {
    color: black;
    background-color: #EEEEEE;
    border-radius: 2px;
    padding: 8px;
    qproperty-alignment: AlignCenter;
    max-height: 1em;
    max-width: 10em;
}

QRadioButton {
	color: white;
	background-color: #212121;
  border-radius: 5px;
  padding: 8px;
}

QCheckBox {
  color: black;
  background-color: #EEEEEE;
  border-radius: 2px;
  padding: 8px;
  margin-top: 10px;
}

QSpinBox, QDoubleSpinBox {
	background-color: white;
  width: 10em;
  max-width: 10em;
}

QComboBox {
    max-width: 10em;
}

QStatusBar {
	color: white;
}

QMenuBar {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                  stop: 0 #E1E1E1, stop: 0.4 #DDDDDD,
                                  stop: 0.5 #D8D8D8, stop: 1.0 #D3D3D3);
}

QMenuBar::item {
   spacing: 3px; /* spacing between menu bar items */
   padding: 1px 4px;
   background: transparent;
   border-radius: 4px;
}

WaveColumnWidget {
  padding: 0px;
  margin: 0px;
  height: 100%;
  min-width: 250px;
  max-width: 350px;
  min-height: 200px;
  border: none;
}

WaveColumnWidget ScopeOutWidget {
  background-color: #212121;
  color: white;
  padding: 0px;
  margin: 0px;
}

WaveColumnWidget QLabel {
    background: transparent;
    color: white;
}

WaveColumnItem QPushButton {
  background: transparent;
  color: white;
  font-size: 14px;
  border-radius: 0px;
}

WaveColumnItem QPushButton::hover {
  color: #F44336;
}

WaveColumnItem QPushButton::pressed {
  color: #D32F2F;
}

WaveColumnWidget QScrollBar {
  background-color: #212121;
  color: white;
}

WaveColumnItem {
  min-height: 3em;
  max-height: 50px;
  min-width: 250px;
  width: 250px;
  border-top: 2px solid #3C3C3C;
  color: white;
}

WaveColumnItem QLabel {
  color: white;
}

WaveColumnItem[state="active"] {
  background-color: #673AB7;
}

WaveColumnItem[state="inactive"] {
  background-color: none;
}

WaveColumnItem[state="active"]:hover {
  background-color: #5E35B1;
}

WaveColumnItem[state="inactive"]:hover {
  background-color: #424242;
}

WaveColumnItem QLabel {
  min-width: 1em;
  max-width: 250px;
  border-radius: 0px;
  padding: 1px;
  qproperty-alignment: AlignLeft;
  background-color: none;
  font-weight: bold;
}

PropertiesPopup {
  color: white;
  background-color: #3C3C3C;
}

waveOptionsTabWidget {
  max-width: 600px;
}